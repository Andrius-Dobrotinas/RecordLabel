@{ 
    string title = (!String.IsNullOrEmpty(ViewBag.Title) ? $"{ViewBag.Title} - " : String.Empty) + Settings.CompanyName;
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@title</title>
    @System.Web.Optimization.Styles.Render("~/Css/_BaseLayout")
    @System.Web.Optimization.Scripts.Render("~/Js/_BaseLayout")
</head>
<body>
    @RenderSection("NavigationHorizontal", false)

    <main class="container body-content">
        @RenderBody()
        <div class="footer-margin"></div>
    </main>

    @RenderSection("Footer", false)
</body>
</html>