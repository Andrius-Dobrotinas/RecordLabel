@model RecordLabel.Web.ModalDialogModel

<div class="modal fade" id="@Model.Id" role="dialog">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <h4 class="modal-title">@Model.Title</h4>
            </div>
            <div class="modal-body">
                @Model.Body
            </div>
            <div class="modal-footer">
                @if (Model.Buttons != null)
                {
                    @Model.Buttons
                }
                <button type="button" class="btn btn-success" data-dismiss="modal">@RecordLabel.Web.Localization.ManagementApplicationLocalization.Modal_OK</button>
            </div>
        </div>
    </div>
</div>